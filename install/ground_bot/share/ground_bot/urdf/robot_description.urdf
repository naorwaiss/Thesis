<?xml version="1.0"?>
  <robot name="hamma_bot">
  <!-- xmlns:xacro="http://ros.org/wiki/xacro"> -->


  <!-- Base footprint -->
  <link name="world_link"/>

  <!-- Base link -->
  <joint name="base_joint" type="fixed">
    <parent link="world_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="3.8 2.2 0.5"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="3.8 2.2 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Sensors -->

  <!-- Lidar -->
  <joint name="base_link_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Camera -->
  <joint name="base_link_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
    <origin xyz="1.6 0 0.4" rpy="0 0 0"/>
  </joint>

  <link name="camera">
    <visual>
      <geometry>
        <box size="0.2 0.6 0.2"/>
      </geometry>
    </visual>
  </link>

  <!-- IMU -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu"/>
    <origin xyz="-1.1 0 0.2" rpy="0 0 0"/>
  </joint>

  <link name="imu">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.3"/>
      </geometry>
    </visual>
  </link>

  <!-- Wheels Ackermann style -->

  <!-- FRONT LEFT steering -->
  <joint name="front_left_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steer_link_fl"/>
    <origin xyz="0.8 1.1 -0.28" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="1"/>
  </joint>

  <link name="steer_link_fl">
  <inertial>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <mass value="0.1"/>
  <inertia
    ixx="0.0001" ixy="0.0" ixz="0.0"
    iyy="0.0001" iyz="0.0"
    izz="0.0001"/>
  </inertial>
</link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="steer_link_fl"/>
    <child link="wheel_fl"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_fl">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- FRONT RIGHT steering -->
  <joint name="front_right_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steer_link_fr"/>
    <origin xyz="0.8 -1.1 -0.28" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="1"/>
  </joint>

  <link name="steer_link_fr">
  <inertial>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <mass value="0.1"/>
  <inertia
    ixx="0.0001" ixy="0.0" ixz="0.0"
    iyy="0.0001" iyz="0.0"
    izz="0.0001"/>
  </inertial>
</link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="steer_link_fr"/>
    <child link="wheel_fr"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_fr">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- REAR LEFT -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.8 1.1 -0.28" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_rl">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- REAR RIGHT -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.8 -1.1 -0.28" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_rr">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Plugins for Ignition Gazebo -->
<gazebo>
  <plugin
    filename="gz-sim-ackermann-steering-system"
    name="gz::sim::systems::AckermannSteering">

    <!-- Steering -->
    <left_steering_joint>front_left_steering_joint</left_steering_joint>
    <right_steering_joint>front_right_steering_joint</right_steering_joint>

    <!-- Driven Wheels -->
    <left_joint>rear_left_wheel_joint</left_joint>
    <right_joint>rear_right_wheel_joint</right_joint>

    <!-- Geometry -->
    <kingpin_width>0.199</kingpin_width>
    <steering_limit>0.4</steering_limit>
    <wheel_base>0.2255</wheel_base>
    <wheel_radius>0.28</wheel_radius>

    <!-- Velocity and Acceleration Limits -->
    <min_velocity>-10.0</min_velocity>
    <max_velocity>10.0</max_velocity>
    <min_acceleration>-10</min_acceleration>
    <max_acceleration>10</max_acceleration>

    <!-- Command Topic -->
    <topic>/cmd_vel</topic>

  </plugin>
</gazebo>

  <!-- Sensor Plugins -->
  <gazebo reference="lidar">
    <plugin name="lidar_plugin" filename="libignition-gazebo-ray-sensor-system.so"/>
  </gazebo>

  <gazebo reference="camera">
    <plugin name="camera_plugin" filename="libignition-gazebo-camera-sensor-system.so"/>
  </gazebo>

  <gazebo reference="imu">
    <plugin name="imu_plugin" filename="libignition-gazebo-imu-sensor-system.so"/>
  </gazebo>

</robot>