<?xml version="1.0"?>
<robot name="ground_bot">

  <link name="base_footprint">
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 -0.2" rpy="0 0 0"/>
  </joint>

  <link name="base_link">  
    <visual>
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.42 0.258 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.42 0.258 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.122"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision> 
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.122"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.122"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 -0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.08" radius="0.122"/>
      </geometry> 
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

<joint name="wheel_right_joint" type="continuous">
  <parent link="base_link"/>
  <child link="wheel_right_link"/>
  <origin xyz="-0.15 0.153 -0.02" rpy="1.577 0 0"/>
  <axis xyz="0 0 1"/>
</joint>

<joint name="wheel_left_joint" type="continuous">
  <parent link="base_link"/>
  <child link="wheel_left_link"/>
  <origin xyz="-0.15 -0.153 -0.02" rpy="1.577 0 0"/>
  <axis xyz="0 0 1"/>
</joint>

<link name ="caster_wheel_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.08"/>
    </geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.08"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="10"/>
    <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<joint name="caster_wheel_joint" type="fixed">
  <parent link="base_link"/>
  <child link="caster_wheel_link"/>
  <origin xyz="0.1 0 -0.06" rpy="0 0 0"/>
</joint>


<link name="stand_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.2" radius="0.01"/>
    </geometry>
  </visual>
</link>

<joint name="stand_joint" type="fixed">
  <parent link="base_link"/>
  <child link="stand_link"/>
  <origin xyz="0 0 0.1" rpy="0 0 0"/>
</joint>

<link name= "launch_pad_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.02" radius="0.15"/>
    </geometry>
  </visual>
</link>

<joint name="launch_pad_joint" type="fixed">
  <parent link="stand_link"/>
  <child link="launch_pad_link"/>
  <origin xyz="0 0 0.1" rpy="0 0 0"/>
</joint>

<link name="imu_link">
  <visual>
    <origin xyz="0 0   0" rpy="0 0 0"/>
    <geometry>
      <box size="0.01 0.01 0.01"/>
    </geometry>
  </visual>
</link>

<joint name="imu_joint" type="fixed">
  <parent link="base_link"/>
  <child link="imu_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>



  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <ignition_frame_id>imu_link</ignition_frame_id>
      <plugin filename="ignition-gazebo-imu-system" name="ignition::gazebo::systems::Imu">
      </plugin>

      <topic>imu</topic>
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>


<ros2_control name="IgnitionSystem" type="system">
  <hardware>
    <plugin>ign_ros2_control/IgnitionSystem</plugin>
  </hardware>

  <!-- Rear driving wheels -->
  <joint name="wheel_right_joint">
    <command_interface name="velocity">
      <param name="min">-100.0</param>
      <param name="max">100.0</param>
    </command_interface>
    <state_interface name="velocity"/>
    <state_interface name="position"/>
  </joint>

  <joint name="wheel_left_joint">
    <command_interface name="velocity">
      <param name="min">-100.0</param>
      <param name="max">100.0</param>
    </command_interface>
    <state_interface name="velocity"/>
    <state_interface name="position"/>
  </joint>


</ros2_control>
  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>/home/naor/Desktop/naor/study/Thesis/src/ground_bot/config/diff_drive_controller_velocity.yaml</parameters>
    </plugin>
  </gazebo>


</robot>