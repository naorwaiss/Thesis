<link name="triangular_part">
  <!-- Base -->
  <visual>
    <geometry>
      <box size="0.34 0.26 0.02"/> <!-- Base -->
    </geometry>
    <origin xyz="0 0 -0.01"/>
  </visual>

  <!-- Vertical Side -->
  <visual>
    <geometry>
      <box size="0.02 0.26 0.26"/> <!-- Vertical Side -->
    </geometry>
    <origin xyz="-0.17 0 0.13"/>
  </visual>

  <!-- Hypotenuse (Approximated as a rotated box) -->
  <visual>
    <geometry>
      <box size="0.34 0.02 0.34"/> <!-- Hypotenuse -->
    </geometry>
    <origin xyz="-0.17 0 0.13" rpy="0 0 45"/>
  </visual>

  <!-- Collisions -->
  <collision>
    <geometry>
      <box size="0.34 0.26 0.02"/> <!-- Base -->
    </geometry>
    <origin xyz="0 0 -0.01"/>
  </collision>

  <collision>
    <geometry>
      <box size="0.02 0.26 0.26"/> <!-- Vertical Side -->
    </geometry>
    <origin xyz="-0.17 0 0.13"/>
  </collision>

  <collision>
    <geometry>
      <box size="0.34 0.02 0.34"/> <!-- Hypotenuse -->
    </geometry>
    <origin xyz="-0.17 0 0.13" rpy="0 0 45"/>
  </collision>

  <!-- Inertial Properties -->
  <inertial>
    <mass value="1.0"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
  </inertial>
</link>

