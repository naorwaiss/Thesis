<?xml version="1.0"?>
  <robot name="hamma_bot">
  <!-- xmlns:xacro="http://ros.org/wiki/xacro"> -->


  <!-- Base footprint -->
  <link name="world_link"/>
  <!-- Base link -->
  <joint name="base_joint" type="fixed">
    <parent link="world_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="3.8 2.2 0.5"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="3.8 2.2 0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Sensors -->

  <!-- Lidar -->
  <joint name="base_link_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="camera_frame"/>
    <joint name="camera_frame_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="camera_link"/>
    <child link="camera_frame"/>
  </joint>




  <!-- Camera -->
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="1.6 0 0.4" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.2 0.6 0.2"/>
      </geometry>
    </visual>
  </link>

  <!-- IMU -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-1.1 0 0.2" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.3"/>
      </geometry>
    </visual>
  </link>

  <!-- Wheels Ackermann style -->

  <!-- FRONT LEFT steering -->
  <joint name="front_left_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steer_link_fl"/>
    <origin xyz="0.8 1.1 -0.28" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="1"/>
  </joint>

  <link name="steer_link_fl">
  <inertial>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <mass value="0.1"/>
  <inertia
    ixx="0.0001" ixy="0.0" ixz="0.0"
    iyy="0.0001" iyz="0.0"
    izz="0.0001"/>
  </inertial>
</link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="steer_link_fl"/>
    <child link="wheel_fl"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_fl">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- FRONT RIGHT steering -->
  <joint name="front_right_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steer_link_fr"/>
    <origin xyz="0.8 -1.1 -0.28" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="10" velocity="1"/>
  </joint>

  <link name="steer_link_fr">
  <inertial>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <mass value="0.1"/>
  <inertia
    ixx="0.0001" ixy="0.0" ixz="0.0"
    iyy="0.0001" iyz="0.0"
    izz="0.0001"/>
  </inertial>
</link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="steer_link_fr"/>
    <child link="wheel_fr"/>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_fr">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- REAR LEFT -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.8 1.1 -0.28" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_rl">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- REAR RIGHT -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.8 -1.1 -0.28" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_rr">
    <visual>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.28" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

    <plugin name='ignition::gazebo::systems::Physics' filename='ignition-gazebo-physics-system'/>
    <plugin name='ignition::gazebo::systems::UserCommands' filename='ignition-gazebo-user-commands-system'/>
    <plugin name='ignition::gazebo::systems::SceneBroadcaster' filename='ignition-gazebo-scene-broadcaster-system'/>
    <plugin filename="ignition-gazebo-sensors-system" name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    
      <gui>
      <camera name='gzclient_camera'>
        <pose>-5.73 3.76 8.10 0 1.1316 -0.4398</pose>
      </camera>
    </gui>

  <!-- Plugins for Ignition Gazebo -->
<gazebo>
  <plugin
    filename="gz-sim-ackermann-steering-system"
    name="gz::sim::systems::AckermannSteering">

    <!-- Steering -->
    <left_steering_joint>front_left_steering_joint</left_steering_joint>
    <right_steering_joint>front_right_steering_joint</right_steering_joint>

    <!-- Driven Wheels -->
    <left_joint>rear_left_wheel_joint</left_joint>
    <right_joint>rear_right_wheel_joint</right_joint>

    <!-- Geometry -->
    <kingpin_width>0.199</kingpin_width>
    <steering_limit>0.4</steering_limit>
    <wheel_base>0.1</wheel_base>
    <wheel_radius>0.28</wheel_radius>

    <!-- Velocity and Acceleration Limits -->
    <min_velocity>-10.0</min_velocity>
    <max_velocity>10.0</max_velocity>
    <min_acceleration>-10</min_acceleration>
    <max_acceleration>10</max_acceleration>
    <topic>/cmd_vel</topic>

  </plugin>
</gazebo>

`
  <gazebo reference="camera_link">
    <plugin name="camera_plugin" filename="libignition-gazebo-camera-sensor-system.so"/>
    <sensor name="robot_cam" type="camera">
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>320</width>
          <height>240</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>robot_cam</topic>
      <enable_metrics>true</enable_metrics>
    </sensor>
  </gazebo>






  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <ignition_frame_id>imu_link</ignition_frame_id>
      <plugin filename="ignition-gazebo-imu-system" name="ignition::gazebo::systems::Imu">
      </plugin>

      <topic>imu</topic>
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>


  <ros2_control name="IgnitionSystem" type="system">
  <hardware>
    <plugin>ign_ros2_control/IgnitionSystem</plugin>
  </hardware>

  <!-- Rear driving wheels -->
  <joint name="rear_left_wheel_joint">
    <command_interface name="velocity">
      <param name="min">-100.0</param>
      <param name="max">100.0</param>
    </command_interface>
    <state_interface name="velocity"/>
    <state_interface name="position"/>
  </joint>

  <joint name="rear_right_wheel_joint">
    <command_interface name="velocity">
      <param name="min">-100.0</param>
      <param name="max">100.0</param>
    </command_interface>
    <state_interface name="velocity"/>
    <state_interface name="position"/>
  </joint>

  <!-- Front steering joints -->
  <joint name="front_left_steering_joint">
    <command_interface name="position"/>
    <state_interface name="position"/>
  </joint>

  <joint name="front_right_steering_joint">
    <command_interface name="position"/>
    <state_interface name="position"/>
  </joint>
</ros2_control>

  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>/home/naor/Desktop/naor/study/Thesis/src/ground_bot/config/ackermann_controller.yaml</parameters>
    </plugin>
  </gazebo>


  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <ignition_frame_id>lidar_link</ignition_frame_id>
      <topic>scan</topic>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.000000</resolution>
            <min_angle>0.000000</min_angle>
            <max_angle>6.280000</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.120000</min>
          <max>3.5</max>
          <resolution>0.015000</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
    </sensor>
  </gazebo>






</robot>