<?xml version="1.0"?>
<robot name="drone" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <!-- Material Colors -->
    <material name="white"><color rgba="1 1 1 1" /></material>
    <material name="black"><color rgba="0 0 0 1" /></material>
    <material name="blue"><color rgba="0 0 1 1" /></material>
    <material name="grey"><color rgba="0.5 0.5 0.5 1" /></material>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="file://$(find sim_drone)/meshes/WholeDrone.STL" scale="0.008 0.008 0.008"/>
            </geometry>
            <origin xyz="0.56 -0.8275 -0.425" rpy="${pi/2} 0 ${pi}" />
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <box size="1.2 1.2 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1.5"/>
            <inertia ixx="0.0201" ixy="0" ixz="0" 
                    iyy="0.0293" iyz="0" 
                    izz="0.0486"/>
        </inertial>
    </link>

    <!-- Propeller Macro and Links (unchanged) -->
    <xacro:macro name="propeller_link" params="prefix">
        <link name="${prefix}_propeller_link">
            <visual>
                <geometry>
                    <mesh filename="file://$(find sim_drone)/meshes/PropellerForRos.STL" scale="0.008 0.008 0.008"/>
                </geometry>
                <origin xyz="-0.269 0.3874 -0.2" rpy="${pi/2} 0 0" />
                <material name="black" />
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.15" length="0.02"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0" />
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="0.0001" ixy="0" ixz="0" 
                        iyy="0.0001" iyz="0" 
                        izz="0.0002"/>
            </inertial>
        </link>
    </xacro:macro>

    <!-- Propeller Links -->
    <xacro:propeller_link prefix="front_right" />
    <xacro:propeller_link prefix="front_left" />
    <xacro:propeller_link prefix="back_right" />
    <xacro:propeller_link prefix="back_left" />

    <!-- Joints (unchanged) -->
    <joint name="base_front_right_propeller_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_right_propeller_link" />
        <origin xyz="-0.444 -0.444 0.1" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <dynamics damping="0.01" friction="0.01"/>
    </joint>

    <joint name="base_front_left_propeller_joint" type="continuous">
        <parent link="base_link" />
        <child link="front_left_propeller_link" />
        <origin xyz="0.451 -0.445 0.1" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <dynamics damping="0.01" friction="0.01"/>
    </joint>

    <joint name="base_back_right_propeller_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_right_propeller_link" />
        <origin xyz="-0.4482 0.455 0.1" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <dynamics damping="0.01" friction="0.01"/>
    </joint>

    <joint name="base_back_left_propeller_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_left_propeller_link" />
        <origin xyz="0.457 0.457 0.1" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <dynamics damping="0.01" friction="0.01"/>
    </joint>

<!-- IMU Link -->
<link name="imu_link">
    <visual>
        <geometry>
            <box size="0.02 0.02 0.02"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <box size="0.02 0.02 0.02"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.01"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" 
                 iyy="0.0001" iyz="0" 
                 izz="0.0001"/>
    </inertial>
</link>

<!-- IMU Joint -->
<joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>


  <gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
    <topic>/imu/data</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <bodyName>imu_link</bodyName>
        <updateRateHZ>100.0</updateRateHZ>
        <gaussianNoise>0.01</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

    <!-- Gazebo Colors -->
    <gazebo reference="base_link"><material>Gazebo/White</material></gazebo>
    <gazebo reference="front_right_propeller_link"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="front_left_propeller_link"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="back_right_propeller_link"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="back_left_propeller_link"><material>Gazebo/Black</material></gazebo>
</robot>