<?xml version="1.0"?>
<!-- Gazebo-specific configurations for swing_drone -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Removed the ign_ros2_control plugin to avoid conflict with PX4 MAVLink control -->
  
    <gazebo>
        <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
              <robot_param_node>robot_state_publisher</robot_param_node>
              <parameters>$(find swing_drone)/config/drone_controller.yaml</parameters>
        </plugin>
    </gazebo>
  

    <!-- Lift and Drag plugins for each propeller -->
    <gazebo>
        <plugin filename="libignition-gazebo-lift-drag-system.so" name="ignition::gazebo::systems::LiftDrag">
            <link_name>A_prop_link</link_name>
            <air_density>1.2041</air_density>
            <center_pressure>0 0 0</center_pressure>
            <direction>0 0 1</direction>
            <upward>0 1 0</upward>
            <area>0.0083</area>
            <coefficient>1.3</coefficient>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin filename="libignition-gazebo-lift-drag-system.so" name="ignition::gazebo::systems::LiftDrag">
            <link_name>B_prop_link</link_name>
            <air_density>1.2041</air_density>
            <center_pressure>0 0 0</center_pressure>
            <direction>0 0 1</direction>
            <upward>0 1 0</upward>
            <area>0.0083</area>
            <coefficient>1.3</coefficient>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin filename="libignition-gazebo-lift-drag-system.so" name="ignition::gazebo::systems::LiftDrag">
            <link_name>C_prop_link</link_name>
            <air_density>1.2041</air_density>
            <center_pressure>0 0 0</center_pressure>
            <direction>0 0 1</direction>
            <upward>0 1 0</upward>
            <area>0.0083</area>
