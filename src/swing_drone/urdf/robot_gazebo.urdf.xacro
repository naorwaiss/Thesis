            <direction>0 0 1</direction>
            <upward>0 1 0</upward>
            <area>0.0083</area>
            <coefficient>1.3</coefficient>
        </plugin>
    </gazebo>

    <gazebo reference="base_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <self_collide>1</self_collide>
        <kp value="10.0" />
        <kd value="1.0" />
        <dampingFactor>0.001</dampingFactor>
    </gazebo>

    <gazebo reference="fr_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <self_collide>1</self_collide>
        <kp value="10.0" />
        <kd value="1.0" />
        <dampingFactor>0.001</dampingFactor>
    </gazebo>

    <gazebo reference="fl_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
